#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define GLOB_VERSION       $glob.version.project_number$ULL
#define GLOB_VERSION_STR   "$glob.version.project$"
#define GLOB_VERSION_ID    "$glob.version.project_id$"
#define GLOB_VERSION_FULL  "$glob.version$"

#define GLOB_VERSION_MAJOR $glob.version.major$
#define GLOB_VERSION_MINOR $glob.version.minor$
#define GLOB_VERSION_PATCH $glob.version.patch$

#define GLOB_PRE_RELEASE   $glob.version.pre_release$

#define GLOB_SNAPSHOT_SN   $glob.version.snapshot_sn$ULL
#define GLOB_SNAPSHOT_ID   "$glob.version.snapshot_id$"

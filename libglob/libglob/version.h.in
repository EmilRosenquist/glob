#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define LIBGLOB_VERSION       $libglob.version.project_number$ULL
#define LIBGLOB_VERSION_STR   "$libglob.version.project$"
#define LIBGLOB_VERSION_ID    "$libglob.version.project_id$"
#define LIBGLOB_VERSION_FULL  "$libglob.version$"

#define LIBGLOB_VERSION_MAJOR $libglob.version.major$
#define LIBGLOB_VERSION_MINOR $libglob.version.minor$
#define LIBGLOB_VERSION_PATCH $libglob.version.patch$

#define LIBGLOB_PRE_RELEASE   $libglob.version.pre_release$

#define LIBGLOB_SNAPSHOT_SN   $libglob.version.snapshot_sn$ULL
#define LIBGLOB_SNAPSHOT_ID   "$libglob.version.snapshot_id$"
